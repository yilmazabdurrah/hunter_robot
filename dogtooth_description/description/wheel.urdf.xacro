<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro" name="dogtooth_wheel">

  <xacro:macro name="dogtooth_wheel" params="wheel_prefix x y z roll:=0.0 pitch:=0.0 yaw:=0.0 is_sim:=true">
    <link name="${wheel_prefix}_wheel">
      <inertial>
        <mass value="2.637" />
        <origin xyz="0 0 0" />
        <inertia  ixx="0.02467" ixy="0" ixz="0" iyy="0.04411" iyz="0" izz="0.02467" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find dogtooth_description)/meshes/wheel.dae" scale="0.6 0.6 0.6"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}" />
        </geometry>
      </collision>
    </link>

  <xacro:if value="${is_sim}">
      <joint name="${wheel_prefix}_wheel_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${wheel_prefix}_wheel"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="0 1 0" rpy="0 0 0" />
    </joint>
    <gazebo reference="${wheel_prefix}_wheel">
      <mu1 value="1.0"/>
      <mu2 value="0.5"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <fdir1 value="1 0 0"/>
    </gazebo>
  </xacro:if>

  <xacro:unless value="${is_sim}">
    <joint name="${wheel_prefix}_wheel_joint" type="fixed">
      <parent link="base_link"/>
      <child link="${wheel_prefix}_wheel"/>
      <origin xyz="${x} ${y} ${z}" rpy="${roll} ${pitch} ${yaw}"/>
      <axis xyz="0 1 0" rpy="0 0 0" />
    </joint>
  </xacro:unless>

  </xacro:macro>
</robot>